# the upstream component nginx needs to connect to
upstream django {
    server unix:///var/www/{{ project_name }}/uwsgi.sock;
}

server {
    listen      80;
    server_name {{ server_name }};

    return 301  https://$host$request_uri;
}

server {
    listen      80;
    server_name www.{{ server_name }};

    return 301  https://{{ server_name }}$request_uri;
}

server {
    listen	80;
    server_name aesh.in;
   
    location /diss {
	return 301  https://{{ server_name }}/dissertation/;
    }
    location /pubs {
	return 301  https://{{ server_name }}/writing/;
    }
    location /RC {
	return 301  https://{{ server_name }}/textmining/;
    }
    location /CG {
	return 301  https://{{ server_name }}/teaching/inls-890-186/2012/fa/;
    }
}

server {
    listen              443 ssl;
    server_name         {{ server_name }};
    ssl_certificate     /etc/letsencrypt/live/{{ server_name }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ server_name }}/privkey.pem;
    # only use modern, secure cipher suites
    # https://weakdh.org/sysadmin.html
    ssl_ciphers 'ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES256-GCM-SHA384:DHE-RSA-AES128-GCM-SHA256:DHE-DSS-AES128-GCM-SHA256:kEDH+AESGCM:ECDHE-RSA-AES128-SHA256:ECDHE-ECDSA-AES128-SHA256:ECDHE-RSA-AES128-SHA:ECDHE-ECDSA-AES128-SHA:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA:ECDHE-ECDSA-AES256-SHA:DHE-RSA-AES128-SHA256:DHE-RSA-AES128-SHA:DHE-DSS-AES128-SHA256:DHE-RSA-AES256-SHA256:DHE-DSS-AES256-SHA:DHE-RSA-AES256-SHA:AES128-GCM-SHA256:AES256-GCM-SHA384:AES128-SHA256:AES256-SHA256:AES128-SHA:AES256-SHA:AES:CAMELLIA:DES-CBC3-SHA:!aNULL:!eNULL:!EXPORT:!DES:!RC4:!MD5:!PSK:!aECDH:!EDH-DSS-DES-CBC3-SHA:!EDH-RSA-DES-CBC3-SHA:!KRB5-DES-CBC3-SHA';
    ssl_prefer_server_ciphers on;
    ssl_dhparam /etc/ssl/dhparams.pem;

    charset             utf-8;

    # max upload size
    client_max_body_size 75M;   # adjust to taste

    if ($host !~* ^{{ server_name }}$ ) {
        return 444;
    }

    location /media/  {
        internal;
        alias /var/www/{{ project_name }}/media/;
    }

    location /static/ {
        alias /var/www/{{ project_name }}/static/;
    }

    location / {
        uwsgi_pass  django;
        include  /etc/nginx/uwsgi_params;
    }
}
