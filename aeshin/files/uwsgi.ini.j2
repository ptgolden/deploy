[uwsgi]

plugins         = python
chdir           = {{ install_root }}
virtualenv      = {{ install_root }}/venv
module          = {{ project_name }}.wsgi

# process-related settings
master          = true
processes       = 4
socket          = {{ www_root }}/uwsgi.sock
chown-socket    = www-data:www-data
chmod-socket    = 664

# clear environment on exit
vacuum          = true
